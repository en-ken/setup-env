set encoding=utf-8
set fileencodings=utf-8
set fileformats=unix,dos,mac

set ignorecase
set smartcase
set incsearch
set hlsearch

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set backspace=indent,eol,start
set showmatch
set wildmenu
set formatoptions+=mM

set title
set number
set ruler
set list
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%
set wrap
set laststatus=2
set showcmd
set showmode

set nobackup
set noswapfile
syntax on
